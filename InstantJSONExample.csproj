    <None Remove="Assets\ocrExample.pdf" />
    <None Remove="Assets\personal-data.csv" />
    <None Remove="Assets\personal-letter.pdf" />
    <None Remove="Assets\playground.pdf" />
    <None Remove="Assets\redaction.json" />
    <None Remove="Assets\rotatedPage.xfdf" />
    <None Remove="Assets\rotatedPages.pdf" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\coverPage.pdf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\default.pdf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\formDocument.pdf">
